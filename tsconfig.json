{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "target": "es2018",
    "sourceMap": true,
    "importHelpers": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "typeRoots": ["node_modules/@types"],
    "downlevelIteration": false,
    "emitDecoratorMetadata": false,
    "experimentalDecorators": false,
    "moduleResolution": "node",
    "lib": ["es2018", "ESNext.Promise"]
  },
  "exclude": ["node_modules", "./dist"]
}
